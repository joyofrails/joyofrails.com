<div class="container">
  <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm text-joy-title">
      <%= inline_svg_tag "joy-logo.svg", class: "fill-current mx-auto", style: "max-width: 64px;", alt: "Joy of Rails" %>
      <h2 class="mt-4 text-center text-2xl font-bold leading-9 tracking-tight">Sign in to your admin account</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with url: admin_users_sessions_path, scope: :admin_user, data: {turbo: false}, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email, "Email address", class: "block text-sm font-medium leading-6" %>
          <div class="mt-2">
            <%= form.email_field :email, autocomplete: "email", required: true, class: "block w-full rounded-md py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= form.label :password, class: "block text-sm font-medium leading-6" %>
            <!-- <div class="text-sm">
              <a href="#" class="font-semibold">Forgot password?</a>
            </div> -->
          </div>
          <div class="mt-2">
            <%= form.password_field :password, type: "password", autocomplete: "current-password", required: true, class: "block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div>
          <%= form.button "Sign in", type: :submit, class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
    <% end %>
    </div>
  </div>
</div>
