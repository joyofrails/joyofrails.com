<%= form_with model: poll, html: {class: "poll form"} do |f| %>
  <% if poll.errors.any? %>
    <%= tag.div class: "error-message" do %>
      <%= poll.errors.full_messages.to_sentence.capitalize %>
    <% end %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>
  <%= link_to "Cancel", author_polls_path, class: "button transparent" %>
  <%= f.submit class: "button secondary" %>
<% end %>
