<% url = answer.new_record? ? poll_question_answers_path(poll, question) : poll_answer_path(poll, answer) %>
<%= form_with model: answer, scope: :answer, url: url,
      html: {class: "form answer answer--form"} do |f| %>

  <% if answer.errors.any? %>
    <%= tag.div class: "error-message" do %>
      <%= answer.errors.full_messages.to_sentence.capitalize %>
    <% end %>
  <% end %>

  <%= f.label :body %>
  <%= f.text_field :body %>
  <div class="answer__actions">
    <%= link_to "Cancel", poll_path(poll), class: "button transparent" %>
    <%= f.submit "Add answer", class: "button secondary" %>
  </div>
<% end %>
