<% url = question.new_record? ? poll_questions_path(poll) : poll_question_path(poll, question) %>

<%= form_with model: question, scope: :question, url: url, html: {class: "form question"} do |f| %>
  <% if question.errors.any? %>
    <%= tag.div class: "error-message" do %>
      <%= question.errors.full_messages.to_sentence.capitalize %>
    <% end %>
  <% end %>

  <%= f.label :body %>
  <%= f.text_field :body, autofocus: true %>
  <%= link_to "Cancel", poll_path(poll), class: "button transparent" %>
  <%= f.submit "Add question", class: "button secondary" %>
<% end %>
